    // https://go.microsoft.com/fwlink/?LinkId=733558의 내용을 참조하세요.
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tstutorial/tsconfig.json",
            "problemMatcher": [
                "$tsc"
